<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blog">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/mylist"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:divider="@color/black"
            android:dividerHeight="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="84dp"
        android:background="#e6f3ff"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_home_24"

            android:text=""
            android:textSize="8sp"
            app:backgroundTint="#004280" />

        <Button
            android:id="@+id/button2"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_menu_book_24"
            android:text=""
            android:textSize="12sp"
            app:backgroundTint="#004280" />

        <Button
            android:id="@+id/button6"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_article_24"
            android:text=""
            android:textSize="12sp"
            app:backgroundTint="#004280" />

        <Button
            android:id="@+id/button"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_phone_24"
            android:text=""
            android:textSize="12sp"
            app:backgroundTint="#004280" />

        <Button
            android:id="@+id/button4"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_info_24"
            android:text=""
            android:textSize="8sp"
            app:backgroundTint="#004280" />
    </LinearLayout>

</RelativeLayout>
